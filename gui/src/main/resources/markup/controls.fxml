<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>

<HBox id="controls" spacing="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Button>
        <graphic>
            <FontAwesomeIconView glyphName="PLAY" glyphSize="16" />
        </graphic>
    </Button>
    <HBox>
        <ToggleButton>
            <graphic>
                <FontAwesomeIconView glyphName="CLOCK_ALT" glyphSize="16" />
            </graphic>
        </ToggleButton>
        <Slider majorTickUnit="20" max="100" showTickLabels="true" showTickMarks="true" />
    </HBox>
</HBox>
